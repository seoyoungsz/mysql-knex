{
  "compilerOptions": {
    "target": "ES2021",
    "module": "Node16",
    "moduleResolution": "node16",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0",
    "types": ["node", "jest"]
  },
  "include": ["src", "tests", "jest.config.ts"],
  "exclude": ["dist"]
}
